# Turn off start message:
startup_message off

# Set messages timeout to one second:
msgwait 1

attrcolor b ".I"
termcap xterm 'Co#256:AB=\E[48;5;%dm:AF=\E[38;5;%dm'

# =-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-= #
##    Keybindings    ##
bindkey ^[. next
bindkey ^[, prev
